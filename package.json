{
  "name": "rcgen",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precompile": "lerna exec --parallel -- rimraf lib",
    "compile": "lerna exec -- tsc --project tsconfig.cjs.json",
    "postinstall": "npm run compile && rcgen --verbose --force",
    "format": "prettier --write '**/*.{js,json,md,ts,tsx,yml}'",
    "lint": "lerna exec --parallel -- tslint --config tslint.json --project tsconfig.json --format verbose",
    "test": "jest --coverage --verbose"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-angular": "^7.5.0",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.0",
    "babel-jest": "^24.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lerna": "^3.13.1",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-config": "^20.9.0",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333",
    "typescript-tslint-plugin": "^0.3.1"
  }
}
